<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_card_view"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/card_view_product_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@null"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/card_view_main_dish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Dish"
            android:padding="5dp"
            android:layout_toRightOf="@+id/card_view_product_logo"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary_text" />

        <TextView
            android:id="@+id/card_view_vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:padding="5dp"
            android:paddingTop="2dp"
            android:layout_toRightOf="@+id/card_view_product_logo"
            android:layout_below="@+id/card_view_main_dish"
            android:textSize="15sp"
            android:textColor="@color/colorSecondary_text"
            android:singleLine="false"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>